@model Services

<form asp-controller="Services" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <label asp-for="ServiceNameLanguage"></label><br>
    <input asp-for="ServiceNameLanguage" type="text" /><br>

    <label asp-for="ServiceCode"></label><br>
    <input asp-for="ServiceCode" type="text" /><br>

    <label asp-for="ServicePriceRate"></label><br>
    <input asp-for="ServicePriceRate" type="number" /><br>

   

    <button type="submit">Create service</button>
</form>

