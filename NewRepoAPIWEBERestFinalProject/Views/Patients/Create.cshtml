@model Patients

<form asp-controller="Patients" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <label asp-for="PatientName"></label><br>
    <input asp-for="PatientName" type="text" /><br>

    <label asp-for="PatientBirthDate"></label><br>
    <input asp-for="PatientBirthDate" type="text" /><br>

    <label asp-for="PatientSexRef"></label><br>
    <input asp-for="PatientSexRef"> type="number" /><br>

    

    <button type="submit">Create patient</button>
</form>

